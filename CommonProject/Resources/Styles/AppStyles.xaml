<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="DarkBlue">#212b4f</Color>
    <Color x:Key="LightBlue">#8a8ba6</Color>
    <Color x:Key="CategoryBackground">#053D38</Color>
    <Color x:Key="TasksBackground">#8AA6A3</Color>

    <Style Class="DarkBlue" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource DarkBlue}"/>
    </Style>
    <Style Class="LightBlue" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource LightBlue}"/>
    </Style>

    <Style Class="CategroySection" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource CategoryBackground}"/>
    </Style>
    <Style Class="TasksSection" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource TasksBackground}"/>
    </Style>
    <Style Class="Header" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="Title"/>
        <Setter Property="TextColor" Value="White"/>
    </Style>

</ResourceDictionary>