<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommonProject.MVVM.Views.MainView"
             Title="MainView">

    <Grid RowDefinitions=".1*, .3*, .8*">
        <Label Text="This is the Machote" StyleClass="Header, DarkBlue"/>
        <Grid Grid.Row="1"
              StyleClass="CategroySection">
            <Grid ColumnDefinitions=".5*, .5*">
                <Label Text="First Column"
                       TextColor="White"
                       TextTransform="Uppercase"
                       />
            </Grid>
            
        </Grid>
        <Grid Grid.Row="2"
              StyleClass="TasksSection">
            <Grid ColumnDefinitions=".7*, .3*">
                <Label Text="First Column"
                       TextColor="White"
                       TextTransform="Uppercase"
                       />
                <Label Grid.Column="1"
                          Text="Second Column"
                          TextColor="White"
                          TextTransform="Uppercase"
                          />
            </Grid>

            
        </Grid>
    </Grid>
</ContentPage>